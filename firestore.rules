rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // USERS
    match /users/{userId} {
      // Public profiles (leaderboards, friends, etc.)
      allow read: if true;

      // Create own profile, but forbid creating isAdmin
      allow create: if isOwner(userId)
        && !request.resource.data.keys().hasAny(['isAdmin']);

      // Update rules:
      // 1) Owner can update their doc, but cannot touch isAdmin
      // 2) Non-owner can only update SOMEONE ELSE'S doc by adding THEMSELVES to that user's friends array
      allow update: if (
        (
          isOwner(userId)
          && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin'])
        )
        ||
        (
          isAuthenticated()
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['friends'])
          && request.resource.data.friends is list
          // must keep all existing friends (no removals)
          && request.resource.data.friends.hasAll(resource.data.get('friends', []))
          // must add self
          && (request.auth.uid in request.resource.data.friends)
          // prevent pointless re-write where self was already present
          && !(request.auth.uid in resource.data.get('friends', []))
        )
      );

      allow delete: if isOwner(userId) || isAdmin();
    }

    // CUSTOM AVATARS (admin-only write)
    match /customAvatars/{avatarId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // GAME ROOMS
    match /gameRooms/{roomId} {
      allow read: if true;

      // Host creates room where playerX must be themselves
      allow create: if isAuthenticated()
        && request.resource.data.playerX == request.auth.uid;

      // Updates allowed if:
      // - you're already playerX or playerO, OR
      // - you're joining as playerO (only if empty) and only changing allowed fields
      allow update: if isAuthenticated() && (
        resource.data.playerX == request.auth.uid ||
        resource.data.playerO == request.auth.uid ||
        (
          resource.data.playerO == null &&
          request.resource.data.playerX == resource.data.playerX &&
          request.resource.data.playerO == request.auth.uid &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'playerO', 'playerOName', 'status', 'updatedAt', 'readyO', 'startedAt', 'round'
          ])
        )
      );

      allow delete: if isAuthenticated()
        && (resource.data.playerX == request.auth.uid || resource.data.playerO == request.auth.uid);
    }

    // FRIEND REQUESTS
    match /friendRequests/{requestId} {
      allow get: if isAuthenticated()
        && (resource.data.from == request.auth.uid || resource.data.to == request.auth.uid);

      allow list: if isAuthenticated();

      allow create: if isAuthenticated()
        && request.resource.data.from == request.auth.uid;

      allow update, delete: if isAuthenticated()
        && (resource.data.from == request.auth.uid || resource.data.to == request.auth.uid);
    }

    // GAME INVITES
    match /gameInvites/{inviteId} {
      allow get: if isAuthenticated()
        && (resource.data.from == request.auth.uid || resource.data.to == request.auth.uid);

      allow list: if isAuthenticated();

      allow create: if isAuthenticated()
        && request.resource.data.from == request.auth.uid;

      allow update, delete: if isAuthenticated()
        && (resource.data.from == request.auth.uid || resource.data.to == request.auth.uid);
    }

    // MATCHMAKING QUEUE
    match /matchmaking_queue/{userId} {
      allow read: if isAuthenticated();
      // Allow user to manage their own queue doc
      allow create, update, delete: if isAuthenticated() && userId == request.auth.uid;

      // Allow another authenticated user to match you by updating ONLY matchmaking fields
      allow update: if isAuthenticated()
        && userId != request.auth.uid
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          'status', 'roomId', 'assignedSymbol', 'opponentId', 'opponentName', 'playerXName', 'playerOName'
        ]);
    }

    // LEADERBOARD (client read-only)
    match /leaderboard/{entry} {
      allow read: if true;
      allow write: if false;
    }

    // DEFAULT DENY
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
